@model WebApplication1.Models.Producto

@{
    ViewBag.Title = "Editar Producto";
}

<h2>Editar Producto</h2>

@using (Html.BeginForm("Edit", "Producto", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.COD_PRO, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.COD_PRO)
                @Html.EditorFor(model => model.COD_PRO, new { htmlAttributes = new { @class = "form-control disabled", @disabled = "true" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NOM_PRO, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOM_PRO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOM_PRO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UME_PRO, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UME_PRO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UME_PRO, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="btn-group" style="margin-top: 12.5px">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-secondary" })
            <input type="submit" value="Confirmar Cambios" class="btn btn-dark" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
